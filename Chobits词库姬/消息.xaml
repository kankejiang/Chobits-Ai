<Page x:Class="Chobits词库姬.消息"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Chobits词库姬"
      xmlns:p="主页"
      
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="消息"
      FontFamily="851tegakizatsu">

    <Grid Background="#FF6F9CEF" >
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="100"/>
            
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="70"/>

        </Grid.RowDefinitions>
        <Border  Background="White" Margin="20,0,20,0" CornerRadius="20" Grid.ColumnSpan="3" >
            <RichTextBox Name="MessageRichTextBox"  Loaded="MessageRichTextBox_Loaded"/>
        </Border>
        

        <TextBox Name="消息输入框" Background="#FFDADADA"  Margin="20,10,2,10" Grid.ColumnSpan="2" Grid.Row="2"></TextBox>


        <Button Name="发送按钮" Content="发送" Margin="31,19,-1,19" Grid.Row="1" Grid.Column="2" HorizontalAlignment="Left" />
    </Grid>
</Page>
